<workflow-app xmlns="uri:oozie:workflow:0.4" name="oracletable-wf">
    <start to="oracletable_start"/>

        <action name="email_fail">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cba.hdfs.sendMail</main-class>
            <arg>Please be informed that workflow ${wf:name()}
has failed.Workflow id is ${wf:id()}.
Error message[${wf:errorMessage(wf:lastErrorNode())}]

Regards,
Your Oozie scheduler
            </arg>
            <arg>Failure of  ${wf:name()}</arg>
            <file>${wfroot}/lib/sendMail.jar#sendMail.jar</file>
        </java>
        <ok to="End"/>
        <error to="Kill"/>
    </action>

  <action name="oracletable_start">
    <fs>
  	 <mkdir path='${flag_root}/oracletable/${YEAR}-${MONTH}-${DAY}' />
   	 <touchz path='${flag_root}/oracletable/${YEAR}-${MONTH}-${DAY}/_START' />
    </fs>
	<ok to="oracletable"/>
	<error to="email_fail"/>
   </action>

    <action name="oracletable" retry-max="0">
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>oozie.use.system.libpath</name>
                    <value>true</value>
                </property>
                <property>
                    <name>oozie.launcher.mapreduce.map.java.opts</name>
                    <value>-verbose:class</value>
                </property>
            </configuration>
            <master>${sparkMaster}</master>
            <name>cbaOraTable</name>
            <class>com.cba.spark.cbaOraTable</class>
            <jar>${wfroot}/lib/cbaOraTable.jar</jar>
            <spark-opts>--jars ojdbc8.jar,cbaSpark.jar,cbaOraSpark.jar --num-executors 5 --executor-memory 15G --driver-memory 2G --conf spark.yarn.jars=*.jar --executor-cores 6</spark-opts>
	<arg>${wfroot}/settings.ini</arg>
        <arg>DEBUG</arg>
        </spark>
        <ok to="oracletable_OK"/>
        <error to="email_fail"/>
    </action>

   <action name="oracletable_OK">
	  <fs>
	      <touchz path='${flag_root}/oracletable/${YEAR}-${MONTH}-${DAY}/_END' />
	      <touchz path='${flag_root}/oracletable/${YEAR}-${MONTH}-${DAY}/_SUCCESS' />
	  </fs>
	  <ok to="End"/>
	  <error to="email_fail"/>
   </action>


    <kill name="Kill">
        <message>oracletable workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="End"/>
</workflow-app>
