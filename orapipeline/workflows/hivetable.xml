<workflow-app xmlns="uri:oozie:workflow:0.4" name="hivetable-wf">
    <start to="hivetable_start"/>

        <action name="email_fail">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cba.hdfs.sendMail</main-class>
            <arg>Please be informed that workflow ${wf:name()}
has failed.Workflow id is ${wf:id()}.
Error message[${wf:errorMessage(wf:lastErrorNode())}]

Regards,
Your Oozie scheduler
            </arg>
            <arg>Failure of  ${wf:name()}</arg>
            <file>${wfroot}/lib/sendMail.jar#sendMail.jar</file>
        </java>
        <ok to="End"/>
        <error to="Kill"/>
    </action>

  <action name="hivetable_start">
	 <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cba.hdfs.genFlagFile</main-class>
            <arg>${flag_root}/hivetable/${YEAR}-${MONTH}-${DAY}/_START</arg>
            <file>${wfroot}/lib/genFlagFile.jar#genFlagFile.jar</file>
        </java>
	<ok to="hivetable"/>
	<error to="email_fail"/>
   </action>

    <action name="hivetable" retry-max="0">
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>oozie.use.system.libpath</name>
                    <value>true</value>
                </property>
                <property>
                    <name>oozie.launcher.mapreduce.map.java.opts</name>
                    <value>-verbose:class</value>
                </property>
            </configuration>
            <master>${sparkMaster}</master>
            <name>hiveSales</name>
            <class>com.cba.spark.hiveSales</class>
            <jar>${wfroot}/lib/hiveSales.jar</jar>
            <spark-opts>--jars cbaSpark.jar --num-executors 5 --executor-memory 15G --driver-memory 2G --conf spark.yarn.jars=*.jar --executor-cores 6</spark-opts>
	<arg>${wfroot}/settings.ini</arg>
        <arg>DEBUG</arg>
        </spark>
        <ok to="hivetable_OK"/>
        <error to="email_fail"/>
    </action>

   <action name="hivetable_OK">
         <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cba.hdfs.genFlagFile</main-class>
            <arg>${flag_root}/hivetable/${YEAR}-${MONTH}-${DAY}/_SUCCESS</arg>
	    <arg>${flag_root}/hivetable/${YEAR}-${MONTH}-${DAY}/_END</arg>
            <file>${wfroot}/lib/genFlagFile.jar#genFlagFile.jar</file>
        </java>
        <ok to="End"/>
        <error to="email_fail"/>
   </action>

   
    <kill name="Kill">
        <message>hivetable workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="End"/>
</workflow-app>
