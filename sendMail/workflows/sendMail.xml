<workflow-app name="wfl_sendMail" xmlns="uri:oozie:workflow:0.5">
    <start to="email-send-java"/>

    <action name="email-send-java">
	<java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cba.hdfs.sendMail</main-class>
            <arg>Please be informed that workflow ${workflow_name}
has failed.
Regards,
Your Oozie scheduler
            </arg>
	    <arg>Information from Oozie mailer</arg>
            <file>${wfroot}/lib/sendMail.jar#sendMail.jar</file>
        </java>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
   <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
   </kill>
<end name="End"/>
</workflow-app>
