<workflow-app name="wfl_emailMessage" xmlns="uri:oozie:workflow:0.5">
    <start to="shell-email-prepare"/>
   
    <action name="shell-email-prepare">
	<java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cba.hdfs.emailMessage</main-class>
	    <arg>${wfroot}/message.txt</arg>	
            <arg>Please be informed that workflow ${workflow_name}
		 has failed.
Regards,
Your Oozie scheduler
            </arg>
            <file>${wfroot}/lib/emailMessage.jar#emailMessage.jar</file>
            <file>${wfroot}/message.txt#message.txt</file>
        </java>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
   <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
   </kill>
    <end name="End"/>
</workflow-app>
